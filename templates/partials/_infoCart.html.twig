<div class="modal fade" id="cart-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title">Product added to cart</h5>
        <button type="button" class="close closeCart" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id='data-container'>
          <div class="row">
            <div class="col-md-3">
                <img class='img-thumbnail img-responsive' style='max-width:128px' id="productImage" src=''>
            </div>
            <div class="col-md-9">
                <h4 class='name' id="productName"></h4>
                <form id="update_cart">
                  <input type='number' min='1' id='productQuantity' value=1>
                  <button type='submit' class='update' class='btn'>Update</button>
                </form>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-4" >
              <a href="" class="btn btn-primary">View cart</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
